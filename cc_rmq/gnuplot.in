#reset
set term pngcairo enhance

set title font "-Bold"

set xtics 1000000, 5000000, 40000000
set xtics font ",9"
set ytics font ",10"

set grid
set mxtics
set format x "%.0t*10^{%T}"

###
set output "plot_pre.png"
set title "RMQ precompute time"
set xlabel "Size of the input array"
set ylabel "Time (s)"

plot "./out_pre" u 1:2 with linespoints title 'sparse table', \
     "./out_pre" u 1:3 with linespoints title 'segment tree'

###
set output "plot_mem.png"
set title "RMQ memory usage"
set xlabel "Size of the input array"
set ylabel "Memory (MB)"

plot "./out_mem" u 1:2 with linespoints title 'sparse table', \
     "./out_mem" u 1:3 with linespoints title 'segment tree'

###
set output "plot_rqm.png"
set title "RMQ total time"
set xlabel "Number of RMQs"
set ylabel "Time (s)"
set xtics 0, 1000000, 10000000

plot "./out_rmq" u 1:2 with linespoints title 'sparse table', \
     "./out_rmq" u 1:3 with linespoints title 'segment tree', \
     "./out_rmq" u 1:4 with linespoints title 'naive' 


#pause -1 "Hit any key to continue"
